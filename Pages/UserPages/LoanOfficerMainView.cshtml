@page
@model StudentLoanSystem.Pages.Data.LoanOfficerMainViewModel

@{
    ViewData["Title"] = "LoanOfficerMainView";
}

<h1>Loans For Review</h1>

<form action="" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Student ID")
                </th>
                <th>
                    @Html.DisplayName("First Name")
                </th>
                <th>
                    @Html.DisplayName("Last Name")
                </th>
                <th>
                    @Html.DisplayName("Post Time")
                </th>
                <th>
                    @Html.DisplayName("Principle")
                </th>
                <th>
                    @Html.DisplayName("Interest Rate")
                </th>
                <th>
                    @Html.DisplayName("Start Date")
                </th>
                <th>
                    @Html.DisplayName("Length")
                </th>
                <th>
                    @Html.DisplayName("Approve")
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.unapproved)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Principle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Start)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td>
                        <input type="checkbox" id="myCheck" onclick=@Model.AboutToApprove.Append(item.Id)>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" name="Approve" value="Approve Selected" />
</form>

