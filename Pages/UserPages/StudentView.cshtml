@model StudentLoanSystem.Data.AccountData
@using System.Data
@{
    ViewData["Title"] = "";
    @functions{
        public void OnGet(Data.Users.Student student)
        {
            //System.Diagnostics.Debug.WriteLine(student.Username);
            //DropDownList1.Items.Insert(0, new ListItem("Add New", ""));
